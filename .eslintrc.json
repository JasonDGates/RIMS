{
    "extends": ["airbnb", "plugin:@typescript-eslint/recommended"],
    "parser": "@typescript-eslint/parser",
    "env": {
      "browser": true,
      "node": true,
      "es6": true
    },
    "settings": {
      "react": {
        "version": "detect"
      }
    },
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      // Your custom rules here
      "import/extensions": ["error", "ignorePackages", {
        "js": "always",
        "jsx": "always",
        "ts": "never",
        "tsx": "never"
      }]
    }
  }